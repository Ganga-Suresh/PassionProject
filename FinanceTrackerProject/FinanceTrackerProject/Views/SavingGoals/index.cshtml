@model IEnumerable<FinanceTrackerProject.Models.SavingGoal>
@{
    ViewBag.Title = "Saving Goals";
}

<h2>@ViewBag.Title.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Target Amount</th>
        <th>Target Date</th>
        <th>Current Amount</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TargetAmount</td>
            <td>@item.TargetDate.ToShortDateString()</td>
            <td>@item.CurrentAmount</td>
        </tr>
    }
</table>
