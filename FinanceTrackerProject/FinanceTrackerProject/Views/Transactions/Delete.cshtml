@model FinanceTrackerProject.Models.Transaction


@{
    ViewBag.Title = "Delete Transaction";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Are you sure you want to delete this transaction?</h4>
    <dl class="dl-horizontal">
        <dt>Date</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>
        <dt>Amount</dt>
        <dd>@Html.DisplayFor(model => model.Amount)</dd>
        <dt>Type</dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>
        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Transaction", new { id = Model.TransactionId }, FormMethod.Post, false))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>